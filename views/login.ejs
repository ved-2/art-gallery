<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Digital Art Gallery - Login</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .login-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #2C3E50, #3498DB);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            max-width: 600px;
            width: 100%;
        }

        .login-header {
            background: #2C3E50;
            padding: 2rem;
            text-align: center;
            color: white;
        }

        .login-body {
            padding: 3rem;
        }

        .login-option {
            border: 2px solid #3498DB;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
            cursor: pointer;
            text-align: center;
        }

        .login-option:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(52, 152, 219, 0.1);
        }

        .login-option.active {
            background: #3498DB;
            color: white;
        }

        .login-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #3498DB;
        }

        .login-option.active .login-icon {
            color: white;
        }

        .form-control {
            width: 100%;
            padding: 0.8rem 1.2rem;
            border-radius: 10px;
            border: 1px solid #dee2e6;
            margin-bottom: 1rem;
        }

        .btn-login {
            width: 100%;
            padding: 0.8rem;
            border-radius: 10px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 1rem;
            background-color: #3498DB;
            color: white;
            border: none;
            cursor: pointer;
        }

        .btn-login:hover {
            background-color: #2980B9;
        }

        .divider {
            margin: 2rem 0;
            text-align: center;
            position: relative;
        }

        .divider::before,
        .divider::after {
            content: '';
            position: absolute;
            top: 50%;
            width: 45%;
            height: 1px;
            background: #dee2e6;
        }

        .divider::before {
            left: 0;
        }

        .divider::after {
            right: 0;
        }

        .login-form {
            display: none;
        }

        .login-form.active {
            display: block;
        }

        .button-container {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-bottom: 20px;
        }

        .login-button {
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }

        .admin-button {
            background-color: #4CAF50;
            color: white;
        }

        .user-button {
            background-color: #008CBA;
            color: white;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>

<body>

    <div class="login-container">
        <div class="login-card">
            <!-- Header Section -->
            <div class="login-header">
                <h2 class="mb-0">Welcome Back</h2>
                <p class="mb-0">Sign in to continue to Digital Art Gallery</p>
            </div>

            <!-- Body Section -->
            <div class="login-body">
                <div class="button-container">
                    <button class="login-button admin-button" onclick="showLoginForm('admin')">Admin Login</button>
                    <button class="login-button user-button" onclick="showLoginForm('user')">User Login</button>
                </div>

                <form id="loginForm" action="/login/admin" method="POST">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button type="submit" class="login-button admin-button" style="width: 100%;">Login</button>
                </form>

                <% if (error) { %>
                    <p style="color: red; text-align: center;"><%= error %></p>
                <% } %>

                <!-- Divider Section -->
                <div class="divider">
                    <span class="bg-white px-3">or</span>
                </div>

                <!-- Registration Option -->
                <div class="text-center">
                    <p>Don't have an account? <a href="/register">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showLoginForm(type) {
            const form = document.getElementById('loginForm');
            const submitButton = form.querySelector('button[type="submit"]');
            
            if (type === 'admin') {
                form.action = '/login/admin';
                submitButton.textContent = 'Admin Login';
                submitButton.className = 'login-button admin-button';
            } else {
                form.action = '/login/user';
                submitButton.textContent = 'User Login';
                submitButton.className = 'login-button user-button';
            }
        }
    </script>

</body>

</html>
