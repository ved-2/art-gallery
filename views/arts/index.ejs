<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Digital Art Gallery</h1>
        <% if (isAdmin) { %>
            <a href="/arts/new" class="btn btn-add-art">
                <i class="fas fa-plus"></i> Add New Art
            </a>
        <% } %>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% for(let art of allArts) { %>
            <div class="col">
                <div class="admin-art-card">
                    <div class="art-image-container">
                        <img src="<%= art.image %>" class="card-img-top" alt="art image">
                    </div>
                    <div class="card-body p-3">
                        <h5 class="card-title mb-2"><%= art.title %></h5>
                        <p class="card-text text-muted mb-2"><%= art.description %></p>
                        <div class="price-action-container">
                            <p class="card-text price-tag">
                                â‚¹<%= art.price.toLocaleString("en-IN") %>
                            </p>
                            <div class="action-buttons">
                                <a href="/arts/<%= art._id %>" class="btn btn-view">View</a>
                                <a href="/arts/<%= art._id %>/edit" class="btn btn-edit">Edit</a>
                                <form class="d-inline" action="/arts/<%= art._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-delete">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>