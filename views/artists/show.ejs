<% layout('layouts/boilerplate') %>

<div class="container my-5">
    <div class="row">
        <!-- Artist Profile -->
        <div class="col-md-4">
            <div class="card shadow">
                <img src="<%= artist.profileImage %>" class="card-img-top" alt="<%= artist.artistName %>" style="height: 300px; object-fit: cover;">
                <div class="card-body">
                    <h2 class="card-title"><%= artist.artistName %></h2>
                    <p class="card-text text-muted"><%= artist.specialization %></p>
                    <p class="card-text"><%= artist.bio %></p>
                    <div class="mt-3">
                        <h5>Contact Information</h5>
                        <p><i class="fas fa-envelope"></i> <%= artist.email %></p>
                        <p><i class="fas fa-phone"></i> <%= artist.contactNumber %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Artist's Artworks -->
        <div class="col-md-8">
            <h3 class="mb-4">Artworks by <%= artist.artistName %></h3>
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <% artworks.forEach(art => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= art.image %>" class="card-img-top" alt="<%= art.title %>" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title"><%= art.title %></h5>
                                <p class="card-text"><small class="text-muted"><%= art.category %></small></p>
                                <p class="card-text">â‚¹<%= art.price.toLocaleString("en-IN") %></p>
                                <a href="/arts/<%= art._id %>" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div> 