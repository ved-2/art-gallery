<% layout("/layouts/boilerplate") %>

<style>
    .exhibition-header {
        background: linear-gradient(135deg, #2C3E50, #3498DB);
        padding: 6rem 0;
        margin-bottom: 4rem;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .exhibition-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('/images/pattern.png');
        opacity: 0.1;
    }

    .exhibition-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

    .exhibition-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .exhibition-image {
        height: 250px;
        object-fit: cover;
    }

    .status-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .status-ongoing {
        background: #2ECC71;
        color: white;
    }

    .status-upcoming {
        background: #F1C40F;
        color: white;
    }

    .status-ended {
        background: #E74C3C;
        color: white;
    }

    .date-badge {
        background: rgba(44, 62, 80, 0.9);
        color: white;
        padding: 1rem;
        border-radius: 10px;
        position: absolute;
        left: 20px;
        bottom: 20px;
        text-align: center;
    }

    .date-badge .day {
        font-size: 1.5rem;
        font-weight: bold;
        line-height: 1;
    }

    .date-badge .month {
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .filter-btn {
        border: 2px solid #3498DB;
        color: #3498DB;
        background: transparent;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        margin: 0 0.5rem;
        transition: all 0.3s ease;
    }

    .filter-btn:hover, .filter-btn.active {
        background: #3498DB;
        color: white;
    }
</style>

