            <h2>Why Choose Us</h2>
            <p class="text-muted">Experience the best in digital art collection</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon">
                            <i class="bi bi-palette fs-1"></i>
                        </div>
                        <h3 class="card-title">Unique Artworks</h3>
                        <p class="card-text">Browse through our curated collection of digital masterpieces.</p>
                        <a href="/arts" class="btn btn-outline-primary mt-3">View Gallery</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon">
                            <i class="bi bi-shield-check fs-1"></i>
                        </div>
                        <h3 class="card-title">Secure Purchase</h3>
                        <p class="card-text">Buy with confidence using our secure payment system.</p>
                        <a href="#" class="btn btn-outline-primary mt-3">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon">
                            <i class="bi bi-people fs-1"></i>
                        </div>
                        <h3 class="card-title">Artist Community</h3>
                        <p class="card-text">Connect with talented artists from around the globe.</p>
                        <a href="/team" class="btn btn-outline-primary mt-3">Meet Artists</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Latest Artworks -->
<div class="section">
    <div class="container-fluid">
        <div class="section-header">
            <h2>Latest Masterpieces</h2>
            <p class="text-muted">Discover our newest additions</p>
        </div>
        <div class="row g-4">
            <% if (arts && arts.length) { %>
                <% for(let art of arts) { %>
                    <div class="col-md-3">
                        <a href="/arts/<%= art._id %>" class="art-link">
                            <div class="card art-card" data-category="<%= art.category %>">
                                <img src="<%= art.image %>" class="card-img-top" alt="Art_image" style="height: 20rem">
                                <div class="card-body">
                                    <p class="card-text">
                                        <b><%= art.title %></b><br>
                                        â‚¹<%= (art.price ? art.price.toLocaleString("en-IN") : 'N/A') %>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p>No artworks available at the moment.</p>
                </div>
            <% } %>
        </div>
        <div class="text-center mt-5">
            <a href="/arts" class="btn btn-custom btn-outline-primary">View All Artworks</a>
        </div>
    </div>
</div>

<!-- Newsletter Section -->
<div class="newsletter-section py-5">
    <div class="container-fluid position-relative">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center text-white">
                <h2 class="display-4 mb-4">Stay Inspired</h2>
                <p class="lead mb-5">Join our community and get exclusive updates</p>
                <div class="glass-card p-4">
                    <form class="row g-3 justify-content-center">
                        <div class="col-md-8">
                            <div class="input-group input-group-lg">
                                <input type="email" class="form-control" placeholder="Enter your email">
                                <button type="submit" class="btn btn-custom btn-light">Subscribe</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

